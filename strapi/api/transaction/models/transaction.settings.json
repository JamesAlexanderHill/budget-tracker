{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "name": "Transaction"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "date": {
      "type": "datetime",
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "Expense",
        "Income"
      ],
      "required": true,
      "default": "Expense"
    },
    "categories": {
      "collection": "category"
    }
  }
}
